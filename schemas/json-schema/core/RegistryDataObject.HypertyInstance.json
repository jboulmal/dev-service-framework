{
	"$schema": "http://json-schema.org/draft-04/schema#",

	"id": "HypertyInstance",
	"type": "object",
	"required": ["url", "user", "guid", "dataSchemes", "resources", "runtime", "context"],
	"properties": {
		"url": {
			"type": "string"
		},
		"user": {
			"type": "string"
		},
		"guid": {
			"type": "string"
		},
		"dataSchemes": {
			"type": "array",
			"items": {
				"enum": [
					"comm",
					"connection",
					"ctxt",
					"action",
					"identity"
				]
			}
		},
		"resources": {
			"type": "array",
			"items": {
				"enum": [
					"chat",
					"audio",
					"video",
					"av",
					"screen",
					"file",
					"midi",
					"temperature",
					"humidity",
					"light",
					"heart_rate",
					"steps"
				]
			}
		},
		"runtime": {
			"type": "string"
		},
		"context": {
			"type": "string"
		}
	}
}
